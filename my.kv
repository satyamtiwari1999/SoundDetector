<MyGrid>:
    button: button
    GridLayout:
        cols:1
        size: root.width, root.height

        Button:
            text:"Start"
            font: 'dejavu sans regular'
            id: button
            on_press: root.btn()
            background_color: (0.1, 0.5, 0, 1) if root.button.text == "Start" else (0.5, 0.1, 0, 1)